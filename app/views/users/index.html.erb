
<!DOCTYPE html>
<html>
<head>
  <title>My Blog</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>
<body id="body">

  <main class="heading">
    <h1>Blog Posts Home</h1>
    <h2>Users</h2>
  </main>

  
  <% @users_with_posts_count.each do |user| %>
    <div class="userContainer">
    <img src="<%= user.photo %>" alt="user profile"/>
    <div class="userCard">
    <h2><%= link_to user.name, user %></h2>
    <p>Posts count: <%= user.posts_count %></p>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                            
    </div>
    </div>
    <% end %>
    
    <span class="footer"> <%= link_to "Create a New Post", new_post_path %> </span>
</body>
</html>
